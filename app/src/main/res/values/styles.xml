<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:windowBackground">@color/white</item>
    <item name="colorPrimary">@color/blue</item>
    <item name="colorPrimaryDark">@color/dark_blue</item>
    <item name="colorAccent">@color/light_blue</item>
    <item name="android:textColorPrimary">@color/blue</item>
    <item name="android:textColor">@color/blue</item>
  </style>

  <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:background">#FFF</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="BigBlueButtonStyle" parent="ButtonStyle">
    <item name="android:textColor">#FFF</item>
    <item name="android:background">@drawable/blue_button</item>
    <item name="android:textSize">18sp</item>
  </style>

  <style name="PinKeyboardKeyButtonStyle" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">64dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:textColor">@color/blue</item>
    <item name="android:textSize">28sp</item>
    <item name="android:layout_margin">1dp</item>
    <item name="android:padding">0dp</item>
    <item name="android:gravity">center</item>
    <item name="android:scaleType">fitXY</item>
    <item name="android:background">#FFF</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:textStyle">normal</item>
    <item name="android:fontFamily">sans-serif-light</item>
  </style>

  <style name="PinInputFieldStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_margin">10dp</item>
  </style>

</resources>
