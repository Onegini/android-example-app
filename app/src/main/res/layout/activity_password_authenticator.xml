<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onegini.mobile.exampleapp.view.activity.PasswordAuthenticatorActivity">

  <!--set or enter password-->
  <TextView
      android:id="@+id/authenticator_message"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Set password"
      style="@style/AuthenticatorMessageStyle"/>

  <EditText
      android:id="@+id/authenticator_password"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/authenticator_message">
    <requestFocus/>
  </EditText>

  <android.support.v7.widget.ButtonBarLayout
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/authenticator_password">

    <Button
        android:id="@+id/auth_accept_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ButtonStyle"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="12dp"
        android:text="OK"/>
  </android.support.v7.widget.ButtonBarLayout>

</RelativeLayout>
