<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/push_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:text="Profile ID"/>

    <TextView
        android:id="@+id/push_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple push message"
        android:textSize="32sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/push_accept_button"
            style="@style/ButtonStyle"
            android:text="@string/btn_push_accept" />

        <Button
            android:id="@+id/push_deny_button"
            style="@style/ButtonStyle"
            android:text="@string/btn_push_deny"/>

    </LinearLayout>
 </LinearLayout>